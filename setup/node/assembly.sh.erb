git clone https://github.com/riywo/ndenv /usr/local/ndenv
echo 'export NDENV_ROOT="/usr/local/ndenv"' >> /etc/profile.d/ndenv.sh
echo 'export PATH="$NDENV_ROOT/bin:$PATH"' >> /etc/profile.d/ndenv.sh
echo 'eval "$(ndenv init -)"' >> /etc/profile.d/ndenv.sh
chmod +x /etc/profile.d/ndenv.sh
source /etc/profile.d/ndenv.sh
git clone https://github.com/riywo/node-build.git /usr/local/ndenv/plugins/node-build
ndenv install 6.4.0
ndenv global 6.4.0