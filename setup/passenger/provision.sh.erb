#/bin/bash



<%= render './setup/base/install_ruby.sh.erb' %>
<%= render './setup/base/install_node.sh.erb' %>

apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 561F9B9CAC40B2F7
apt-get install -y apt-transport-https ca-certificates > /dev/null 2>&1

sh -c 'echo deb https://oss-binaries.phusionpassenger.com/apt/passenger trusty main > /etc/apt/sources.list.d/passenger.list'

apt-get update > /dev/null 2>&1

echo "Installing passenger..."
apt-get install -y nginx-extras passenger > /dev/null 2>&1

cp ~/tmp/files/app.conf /etc/nginx/sites-enabled

mkdir /var/www
chown <%= user %> -R /var/www

<%= render './setup/base/remove_temp_files.sh.erb' %>
